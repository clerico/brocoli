{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module":"es2015",
        "lib": [ "es2015", "es2016", "es2017", "dom" ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist/es",
        "noEmitHelpers": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
          "typings",
          "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}
